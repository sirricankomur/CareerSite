@model CourseListViewModel

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Courses</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/courses/create">Add Course</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Image</td>
                    <td>Name</td>
                    <td style="width: 20px;">Price</td>
                    <td style="width: 20px;">Anasayfa</td>
                    <td style="width: 20px;">Onaylı</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Courses.Count>0)
                {
                       @foreach (var item in Model.Courses)
                        {
                            <tr>
                                <td>@item.CourseId</td>
                                <td><img src="~/img/@item.ImageUrl" width="80"></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>
                                    @if(item.IsHome)
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }else{
                                        <i class="fas fa-times-circle"></i>
                                    }
                                </td>
                                <td>
                                    @if(item.IsApproved)
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }else{
                                        <i class="fas fa-times-circle"></i>
                                    }
                                </td>
                                <td>
                                    <a href="/admin/courses/@item.CourseId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                    
                                    <form action="/admin/deletecourse" method="POST" style="display: inline;">
                                        <input type="hidden" name="courseId" value="@item.CourseId">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>No Courses</h3>
                    </div>
                }

             
            </tbody>
        </table>
    </div>
</div>