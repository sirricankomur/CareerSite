@model CategoryModel

<h1 class="h3">Create Category</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CategoryCreate" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="NameTr" class="col-sm-3 col-form-label text-right">Türkçe - Kategori Adı</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="NameTr">
                    <span asp-validation-for="NameTr" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NameEn" class="col-sm-3 col-form-label text-right">English - Category Name</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="NameEn">
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UrlTr" class="col-sm-3 col-form-label text-right">Türkçe - Url Kısaltması</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="UrlTr">
                    <span asp-validation-for="UrlTr" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UrlEn" class="col-sm-3 col-form-label text-right">English - Url Abbreviation</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="UrlEn">
                    <span asp-validation-for="UrlEn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}