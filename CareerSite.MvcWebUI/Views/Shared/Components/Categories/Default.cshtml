@model List<Category>
<div class="list-group">
    <a href="/courses"  style="font-size: large; font-weight: 500; text-align: center" class="list-group-item list-group-item-action bg-secondary text-light">Tüm Kurslar</a>
    
    @foreach (var item in Model)
    {
        <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url" 
        style="font-size: large; font-weight: 500; text-align: center" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == item.Url?"active":"")">
            @item.Name
        </a>
    }
</div> 
