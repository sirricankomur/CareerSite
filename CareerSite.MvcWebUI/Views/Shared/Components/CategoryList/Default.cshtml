@model CareerSite.MvcWebUI.Models.CategoryListViewModel

<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";
        if (category.Id == Model.CurrentCategory)
        {
            css += " active";
        }
        <a href="/course/index?category=@category.Id" class="@css">@category.Name</a>
    }
</div>