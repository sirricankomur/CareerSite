@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer Localizer
@*@{
    string url = "";
    if (Context.Request.Path.ToString().Length > 4)
    {
    if (Context.Request.Path.ToString().Remove(4) == "/tr/")
    {
    url = "/tr/anasayfa";
    }
    else if (Context.Request.Path.ToString().Remove(4) == "/en/")
    {
    url = "/en/home";
    }
    }
    else
    {
    url = "/tr/anasayfa";
    }


    }*@
    @{
    string url = "";
    if (Context.Request.Path.ToString().Length >= 4)
    {
        url = Context.Request.Path.ToString().Remove(4);
    }
}


<div class="container">

    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-3 d-flex justify-content-start align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin"))
                    {
                        @if (url == "/tr/" || url == "")
                        {
                            <div class="pr-3">
                                <a class="btn btn-sm btn-outline-danger" href="/tr/dashboard">Admin Paneli</a>
                            </div>
                        }
                        else
                        {
                            <div class="pr-3">
                                <a class="btn btn-sm btn-outline-danger" href="/en/dashboard">Dashboard</a>
                            </div>
                        }
                    }
                }
                <div>
                    <form action="/search">
                        <div class="input-group input-group-sm">
                            @if (url == "/tr/" || url == "")
                            {
                                <input name="q" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Ara">
                            }
                            else
                            {
                                <input name="q" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Search">
                            }
                            <div class="input-group-append">
                                <button class="btn btn-outline-dark" type="submit" id="button-addon2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-4 pt-3 text-center">
                @if (url == "/tr/" || url == "")
                {
                <a class="blog-header-logo text-dark" href="/tr/anasayfa">CareerSite</a>
                }
                else
                {
                <a class="blog-header-logo text-dark" href="/en/home">CareerSite</a>
                }

            </div>
            <div class="col-4 pt-3 d-flex justify-content-end align-items-center">

                <div class="pr-3">
                    <a class="text-body" href="/cart" title="Sepet">
                        <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="currentColor" class="bi bi-bag-check" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0z"></path>
                            <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"></path>
                        </svg>
                    </a>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @User.Identity.Name
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @if (url == "/tr/" || url == "")
                            {
                                <a class="dropdown-item" href="/records">Kayıtlar</a>
                                <a class="dropdown-item text-danger" href="/tr/account/logout">Çıkış</a>

                            }
                            else
                            {
                                <a class="dropdown-item" href="/records">Records</a>
                                <a class="dropdown-item text-danger" href="/en/account/logout">Log out</a>
                            }
                        </div>
                    </div>
                }
                else
                {
                    @if (url == "/tr/" || url == "")
                    {
                        <div class="mr-2">
                            <a class="btn btn-sm btn-outline-success" href="/tr/account/login">Giriş</a>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-outline-primary" href="/tr/account/register">Kayıt Ol</a>
                        </div>
                    }
                    else
                    {
                        <div class="mr-2">
                            <a class="btn btn-sm btn-outline-success" href="/en/account/login">Log in</a>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-outline-primary" href="/en/account/register">Register</a>
                        </div>
                    }
                }
            </div>
        </div>
    </header>

    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-between">
            @if (url == "/tr/" || url == "")
            {
                <a class="p-2 text-muted" href="/tr/kurslar/yazilim">Yazılım</a>
                <a class="p-2 text-muted" href="/tr/kurslar/saglik">Sağlık</a>
