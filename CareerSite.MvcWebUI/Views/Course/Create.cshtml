@model Course
@inject IViewLocalizer Localizer

<form method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">@Localizer["NameTr"]</label>
        <input asp-for="NameTr" value="@Model.NameTr" class="form-control">  
        <span asp-validation-for="NameTr" class="text-danger"></span>  
    </div>
     <div class="form-group">
        <label for="Name">@Localizer["NameEn"]</label>
        <input asp-for="NameEn" value="@Model.NameEn" class="form-control">  
        <span asp-validation-for="NameTr" class="text-danger"></span>  
    </div>
    <div class="form-group">
        <label for="Price">@Localizer["Price"]</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">
         <span asp-validation-for="Price" class="text-danger"></span>  
    </div>
    <div class="form-group">
        <label for="Description">@Localizer["DescriptionTr"]</label>
        <textarea asp-for="DescriptionTr" value="@Model.DescriptionTr" class="form-control"></textarea>
         <span asp-validation-for="DescriptionTr" class="text-danger"></span>  
    </div><div class="form-group">
        <label for="Description">@Localizer["DescriptionEn"]</label>
        <textarea asp-for="DescriptionEn" value="@Model.DescriptionEn" class="form-control"></textarea>
         <span asp-validation-for="DescriptionEn" class="text-danger"></span>  
    </div>
    <div class="form-group">
        <label for="ImageUrl">@Localizer["ImageUrl"]</label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
         <span asp-validation-for="ImageUrl" class="text-danger"></span>  
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
</form>