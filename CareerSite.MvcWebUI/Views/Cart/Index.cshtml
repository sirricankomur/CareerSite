@model CartModel

<h1 class="h3">Shopping Cart</h1>
<hr>

@if (Model.CartItems.Count == 0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning">
                Sepetinizde ürün yok.
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Cart Items</h4>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Kurs</th>
                        <th>Fiyat</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.ImageUrl" width="80" alt="">
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="courseId" value="@item.CourseId">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Sepet Özeti</h4>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-left">Ürün Miktarı</th>

                        <th class="text-right"><span class="text-muted">@Model.CartItems.Count Kurs</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <th class="text-left">@item.Name</th>
                            <td class="text-right">@item.Price.ToString("c")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th class="text-left" style="font-size:20px">Record Total</th>
                        <th class="text-right" style="font-size:20px">@Model.TotalPrice().ToString("c")</th>
                    </tr>
                </tfoot>
            </table>
            <div class="text-center ">
                <a href="/" class="btn btn-warning text-weight-bold">
                    <i class="fa fa-arrow-circle-left fa-fw"></i> Devam Et
                </a>
                <a href="/checkout" class="btn btn-primary">
                    Ödeme Yap <i class="fa fa-arrow-circle-right fa-fw"></i>
                </a>
            </div>
        </div>
    </div>
}