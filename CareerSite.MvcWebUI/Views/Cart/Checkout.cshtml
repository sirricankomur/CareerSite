@model RecordModel

<h1>Ödeme Sayfası</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="pt-3">Sipariş Detayı</h4>
        <hr class="mb-3">

        <form method="POST" asp-controller="Cart" asp-action="Checkout">
            <input type="hidden" name="cartId" value="0">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName">Ad</label>
                    <input asp-for="@Model.FirstName" class="form-control" placeholder="Adınızı girin">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName">Soyad</label>
                    <input asp-for="@Model.LastName" class="form-control" placeholder="Soyadınızı girin">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address">Adres</label>
                <textarea asp-for="@Model.Address" class="form-control" placeholder="Adresinizi girin"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.City">Şehir</label>
                    <input asp-for="@Model.City" class="form-control" placeholder="Şehrinizi girin">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone">Telefon</label>
                    <input asp-for="@Model.Phone" class="form-control" placeholder="Telefon numaranızı girin">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email">E-posta</label>
                    <input asp-for="@Model.Email" class="form-control" placeholder="E-posta adresinizi girin">
                </div>
            </div>
            <h4 class="pt-3">Ödeme Bilgileri</h4>
            <hr class="mb-3">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName">Banka Adı</label>
                    <input asp-for="@Model.CardName" class="form-control" placeholder="Banka adını girin">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CardNumber">Kart Numarası</label>
                    <input asp-for="@Model.CardNumber" class="form-control" placeholder="Kart numarasını girin">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth">Ay</label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control" placeholder="Kart S.K.T. 'Ay' bilgisini girin">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear">Yıl</label>
                    <input asp-for="@Model.ExpirationYear" class="form-control" placeholder="Kart S.K.T. 'Yıl' bilgisini girin">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Cvc">Cvc</label>
                    <input asp-for="@Model.Cvc" class="form-control" placeholder="Cvc girin">
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block">Ödeme yap</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Kayıt Özeti</span>
        </h4>
        <hr />
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between">
                 <div>
                        <h5>Kurs Miktarı</h5>
                    </div>
                     <span class="text-muted">@Model.CartModel.CartItems.Count Kurs</span>
            </li>
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Name</h6>
                    </div>
                    <span class="text-muted">@item.Price.ToString("c")</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                 <div>
                        <h4>Toplam</h4>
                    </div>

                 <h4><strong>@Model.CartModel.TotalPrice().ToString("c")</strong></h4>
            </li>
        </ul>

    </div>
</div>